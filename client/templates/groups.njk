{%extends "layout.njk" %}
{% from "partials/icons.njk" import icon %}
{%block content %}
	<div class="container mx-auto mt-4">
		<div class="sm:flex items-center">
			<h1 class="text-2xl mb-4 sm:mb-0">Your Groups</h1>
			<a href="/groups/create" class="text-blue-700 btn btn-green inline-flex items-center sm:ml-auto"
															 >{{icon("plus", "mr-2")}}Create a group</a
														 >
		</div>
				<ul class="mt-4 ">
					{%for group in groups %}
						<li class="mb-2 border p-4">
							<a
								class="hover:underline text-blue-700 mb-2"
								href="/groups/{{group.custom_path if group.custom_path else group.id}}"
								><h3 class="text-xl">{{group.name}}</h3><a>
								<p class="mt-1 ml-6">{{group.description | safe}}</p>
						</li>
					{%endfor%}
				</ul>
	</div>
{%endblock%}
