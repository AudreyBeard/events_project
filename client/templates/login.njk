{% extends "layout.njk"%}
{%import "partials/form_messages.njk" as messages %}
{%block title%}Login{%endblock%}
{%block content %}
<div class="container mx-auto flex items-center flex-col content" >
  <div class="w-full">
    <section class="text-center text-lg">
      <h1 class="text-bold text-2xl">Login or Signup</h1>
      <p>All we need is your email or phone number.</p>
      <p>No passwords or anything else to remember</p>
    </section>
    <div
      class="login-container mx-auto p-4 bg-gray-100 border border-gray-500 mt-5"
    >
		<div class="my-2">
			{{messages.messages("login")}}
    </div>
        <form method="POST" data-controller="login" data-login-action="/api/login" data-action="login#login" data-target="login.form">

      <div class="mb-2">
        <label for="email">
          Login with your email
        </label>
          <input
            type="email"
            placeholder="Email"
            class="border border-gray-500 p-1 w-full"
            id="email"
            name="email"
          />
      </div>
      <div class="hr-text">
        <span class="text-xl font-bold">OR</span>
      </div>
      <div class="mt-2 mb-2">
        <label for="phone">
          Login with your phone number
        </label>
          <input
            type="phone"
            placeholder="Phone"
            class="border border-gray-500 p-1 w-full"
            id="phone"
            name="phone"
          />
          <button class="w-full btn btn-green mt-8" type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>
{%endblock%}
