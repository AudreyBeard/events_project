<html>
	<head>
		<title>Hello</title>
		<script src="/static/js/index.js"></script>
		<link rel="stylesheet" href="/static/css/main.css"/>
	</head>
	<body>
		<%-include("partials/header")%>
		<div class="container mx-auto" style="width:700px">
			<div class="flex items-center justify-center">
				<div class="p-4 border-2 border-gray-300">
					<div>
						<img src="/static/img/banner.jpg" class="w-full object-contain h-full"/>
					</div>
					<p class="pt-4 text-xl">
					Occasions - <%= date.format(new Date(), "PP") %>
					</p>
				</div>
			</div>
			<div class="mt-4">
				<ul class="list-disc">
					<%events.forEach((event)=>{%>
						<li class="py-2">
							<h3>
							<a href="/events/<%=event.slug%>" class="underline text-md"><%=event.name%>
								- <%=date.format(date.addDays(new Date(), 2), "PP")%></a>
							</h3>
							<p>
								<%=event.description%>
							</p>
							<div>
						</li>
					<%})%>
				</ul>
			</div>
		</div>
	</body>
</html>
