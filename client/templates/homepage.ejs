<div class="container mx-auto content max-w-3xl">
  <div class="mt-4">
    <h1 class="text-2xl font-bold text-center">Your Events</h1>
    <ul class="">
      <%events.forEach((event)=>{%>
      <li class="py-2">
        <h3>
          <a
            href="/events/<%=event.slug%>"
            class="bg-black p-1 text-white relative event-link"
            ><%=event.name%> - <%=date.format(new Date(event.date), "PP")%></a
          >
        </h3>
        <p>
          <%=event.description%>
        </p>
      </li>
      <%})%>
    </ul>
  </div>
</div>
