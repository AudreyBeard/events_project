{%extends "layout.njk"%}
{%from "homepage.njk" import eventsList %}
{%block content %}
	<div class="container content mx-auto overflow-hidden relative h-full">

		<div class="text-xl relative">
			<section class="py-4 mt-2 text-center lg:text-left flex h-full lg:banner-green ">
				<div class="flex-1 p-4 ">
					<h1 class="font-bold text-6xl p-1 bg-juniper-city banner-green lg:bg-juniper-city-none banner-text lg:banner-text-none bg-juniper-city-repeat"><span class="lg:inline block">Juniper</span> City!</h1>
				<p class="p-1 mt-4">
				Juniper City is the easiest way to create and invite people to your
				event.
				</p>
				<p class="p-1 mt-4">
				<a href="/create" class="text-blue-700 underline sm:text-black p-1">Create your event</a> with just a
				name and a date.
				</p>
				<p class="p-1 mt-4">
				You can invite anyone with only an email or phone number.
				</p>
				<p class="p-1 mt-4">No need for them to sign up!</p>
				<div class="mt-8">
					<a
						href="/create"
						class="btn btn-blue text-2xl"
						>Get Started Now</a
					>
				</div>
						<p class="mt-5">
						<a href="/help" class="underline text-blue-700 mt-5 text-xs sm:text-black p-1">Visit our help and guides to learn more</a>
						</p>
				</div>
				<div class="hidden lg:block sm:w-1/3 bg-juniper-city">
				</div>
			</section>
			<section class="mt-8">
				<h2 class="font-bold text-xl">Public events</h2>
				{{eventsList(events, format=date.format)}}
			</section>
		</div>

	</div>
{%endblock%}
