{%macro group_nav(path, active = "base", role="member")%}

{%set inactiveClass = "bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold"%}
{%set activeClass = "bg-white inline-block py-2 px-4 text-blue-700  font-semibold font-semibold  border-l border-t border-r rounded-t border-gray-800" %}

<ul class="flex border-b border-gray-800 text-md my-4">
	<li class="{{"-mb-px" if active === "base"}} mr-1 pl-2">
		<a
			class="{{activeClass if active === "base" else inactiveClass}}"
			href="{{path}}"
			>Group Details</a>
	</li>
	<li class="{{"-mb-px" if active === "events"}} mr-1">
		<a
			class="{{activeClass if active === "events" else inactiveClass}}"
			href="{{path}}/events"
			>Events</a>
	</li>
	{% if role === "admin" or role === "owner" %}
	<li class="{{"-mb-px" if active === "manage"}} mr-1">
		<a
			class="{{activeClass if active === "manage" else inactiveClass}}"
			href="{{path}}/manage"
			>Manage Group</a>
	</li>
	{%endif%}
</ul>
{%endmacro%}
