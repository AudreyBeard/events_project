{%macro event_nav(path, commentCount, active, allowDiscussion = false, canEdit=false, isCreator=false)%}
{% from "../icons.njk" import icon %}
{%set inactiveClass = "bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold"%}
{%set activeClass = "bg-white inline-block py-2 px-4 text-blue-700  font-semibold font-semibold  border-l border-t border-r rounded-t border-gray-800" %}

<ul class="flex border-b border-gray-800 text-md my-4 sm:text-sm text-xs">
	<li class="{{"-mb-px" if active === "base"}} mr-1 pl-2 text-center">
		<a
			class="{{activeClass if active === "base" else inactiveClass}}"
			href="{{path}}"
			>{{icon("book", "mr-2")}}Details</a>
	</li>
	{%if isCreator %}
		<li class="{{"-mb-px" if active === "responses"}} mr-1 text-center relative">
			<a class="{{activeClass if active === "responses" else inactiveClass}}"
				 href="{{path}}/responses">
				{{icon("note", "mr-2")}}Responses
			</a>
		</li>
	{%endif%}
	{%if allowDiscussion%}
		<li class="{{"-mb-px" if active === "discussion"}} mr-1 text-center relative">
			<a
				class="{{activeClass if active === "discussion" else inactiveClass}}"
				href="{{path}}/discussion"
				>{{icon("comments", "mr-2")}}Discussion</a>
		</li>
	{%endif%}
	{%if canEdit %}
		<li class="{{"-mb-px" if active === "manage"}} mr-1 text-center">
			<a class="{{activeClass if active === "manage" else inactiveClass}}"
				 href="{{path}}/settings">{{icon("tools", "mr-2")}}Settings</a>
		</li>
	{%endif%}
</ul>
{%endmacro%}
