<header class="border-b-2 border-black mb-4">
	<nav data-controller="menu-dropdown">
		<div class="whitespace-no-wrap flex items-center container mx-auto py-2 ">
			<a href="/" class="underline font-bold text-md  text-lg">Juniper City</a>
			{%if loggedIn %}
				<button class="ml-auto text-lg btn btn-green hidden sm:block" data-action="menu-dropdown#toggle">Menu</button>
			{%else%}
				<a href="/login" class="text-lg underline ml-auto">Login / Signup</a>
				{%endif%}
		</div>

			{%if loggedIn %}
				<ul class="items-center sm:hidden bg-green-200 border-t border-green-400 flex sm:block" data-target="menu-dropdown.menu">
				<li class="flex-1">
					<a href="/create" class="text-xs sm:text-lg hover:underline hover:bg-green-400 block p-2 sm:border-b border-green-400 text-center sm:text-left">

						<span class="sm:block container sm:mx-auto p-0 flex flex-col"><i class="fas fa-plus text-xl sm:text-lg"></i> Create Event</span>
					</a>
				</li>
				<li class="flex-1">
					<a href="/groups" class="sm:text-lg hover:underline hover:bg-green-400 block p-2 sm:border-b border-green-400 text-center sm:text-left">
						<span class="sm:block container sm:mx-auto p-0 flex flex-col"><i class="fas fa-users text-xl sm:text-lg"></i> Groups</span></a>
				</li>
				<li class="flex-1">
					<a href="/settings" class="sm:text-lg hover:underline hover:bg-green-400 block p-2 sm:border-b border-green-400 text-center sm:text-left">
						<span class="sm:block container sm:mx-auto p-0 flex flex-col"><i class="fas fa-cog text-xl sm:text-lg"></i> Settings</span></a>
				</li>
				<li class="sm:mt-4 flex-1">
					<button
						data-controller="logout"
						data-action="logout#logout"
						class="sm:text-lg hover:underline hover:bg-green-400 block p-2 sm:border-b border-green-400 block w-full sm:text-left text-center"
						>
						<span class="sm:block container sm:mx-auto p-0 flex flex-col"><i class="fas fa-sign-out-alt text-xl sm:text-lg"></i> Logout</span>
					</button>
				</li>

				</ul>

			{%endif%}
		
	</nav>
</header>
